<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_wc_backend_tree" model="ir.ui.view">
      <field name="name">wc.backend.tree</field>
      <field name="model">wc.backend</field>
      <field name="arch" type="xml">
        <tree string="Backend">
          <field name="name" />
          <field name="location"/>
        </tree>
      </field>
    </record>

    <record id="view_wc_backend_form" model="ir.ui.view">
      <field name="name">wc.backend.form</field>
      <field name="model">wc.backend</field>
      <field name="arch" type="xml">
        <form string="Backend">
          <header>
            <button string="Check Connection" class="oe_highlight"
              type="object" name="test_connection" />
          </header>
          <sheet>
            <label for="name" string="Name" />
            <h1>
              <field name="name" required="1" />
            </h1>
            <group string="WooCommerce Configuration">
              <field name="location" required="1" />
              <field name="consumer_key" required="1" />
              <field name="consumer_secret" required="1" />
              <field name="version" />
              <field name="verify_ssl" />
              <field name="default_lang_id" />
            </group>
            <group string="Main Configuration">
                <field name="warehouse_id"/>
            </group>
            <notebook>
                <page name="import" string="Imports">
                    <group>
                        <div>
                            <label string="Import product categories since" class="oe_inline"
                                for="import_product_categories_since"/>
                            <field name="import_product_categories_since" class="oe_inline"
                                nolabel="1" />
                        </div>
                        <button name="import_categories" type="object" class="oe_highlight"
                            string="Import in background" />
                    </group>
                    <group>
                        <div>
                            <label string="Import products since" class="oe_inline"
                                for="import_products_since"/>
                            <field name="import_products_since" class="oe_inline"
                                nolabel="1" />
                        </div>
                        <button name="import_products" type="object" class="oe_highlight"
                            string="Import in background" />
                    </group>
                    <group>
                        <div>
                            <label string="Import customers since" class="oe_inline"
                                for="import_customers_since"/>
                            <field name="import_customers_since" class="oe_inline"
                                nolabel="1" />
                        </div>
                        <button name="import_customers" type="object" class="oe_highlight"
                            string="Import in background" />
                    </group>
                    <group>
                        <div>
                            <label string="Import orders since" class="oe_inline"
                               for="import_orders_since"/>
                            <field name="import_orders_since" class="oe_inline"
                                nolabel="1" />
                        </div>
                        <button name="import_orders" type="object" class="oe_highlight"
                            string="Import in background" />
                    </group>
                    <group>
                        <div>
                            <label string="Import Carriers" class="oe_inline"
                               for="import_carriers"/>
                        </div>
                        <button name="import_carriers" type="object" class="oe_highlight"
                            string="Import in background" />
                    </group>
                </page>
                <page string="Options">
                    <group>
                        <field name="matching_product"/>
                        <field name="importable_order_state_ids" widget="many2many_tags"/>
                        <field name="shipping_product_id"/>
                        <field name="partner_vat_field"/>
                        <field name="fee_product_id"/>
                        <field name="sale_team_id"/>
                    </group>
                </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_wc_backend_view">
      <field name="name">Backends</field>
      <field name="res_model">wc.backend</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="act_open_wc_backend_view_form">
      <field name="act_window_id" ref="act_open_wc_backend_view" />
      <field name="sequence" eval="20" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_wc_backend_form" />
    </record>

    <record model="ir.actions.act_window.view" id="act_open_wc_backend_view_tree">
      <field name="act_window_id" ref="act_open_wc_backend_view" />
      <field name="sequence" eval="10" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_wc_backend_tree" />
    </record>

    <menuitem id="menu_woocommerce_root"
      parent="connector.menu_connector_root"
      name="WooCommerce"
      sequence="10"
      groups="connector.group_connector_manager"/>

    <menuitem id="menu_wc_backend" parent="menu_woocommerce_root"
      sequence="20" action="act_open_wc_backend_view" />

</odoo>
